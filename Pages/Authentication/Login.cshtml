@page
@model Mini_Theatre.Pages.Authentication.LoginModel
@{
    ViewData["Title"] = "Login";
}

<section class="after-head d-flex section-text-white position-relative">
    <div class="d-background" data-image-src="../images/login.jpg" data-parallax="scroll"></div>
    <div class="d-background bg-black-50"></div>
    <div class="top-block top-inner container">
        <div class="top-block-content">
            <h1 class="section-title">Đăng nhập</h1>
            <div class="page-breadcrumbs">
                <a class="content-link" asp-page="/Index">Home</a>
                <span class="text-theme mx-2"><i class="fas fa-chevron-right"></i></span>
                <span>Login</span>
            </div>
        </div>
    </div>
</section>
<div class="container mt-3">
    <div class="row container">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span class="text-danger">@ViewData["Message"]</span>
                @Html.HiddenFor(x => x.ReturnUrl)
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberLogin" /> @Html.DisplayNameFor(model => model.RememberLogin)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                    <a class="btn btn-danger" asp-page-handler="ExternalLogin" asp-route-provider="Google">Login with Google</a>
                </div>
            </form>
        </div>
    </div>
</div>