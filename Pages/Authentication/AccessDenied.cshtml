@page
@model Mini_Theatre.Pages.Authentication.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<section class="after-head d-flex section-text-white position-relative">
    <div class="d-background" data-image-src="http://via.placeholder.com/1920x1080" data-parallax="scroll"></div>
    <div class="d-background bg-black-80"></div>
    <div class="top-block top-inner container">
        <div class="top-block-content">
            <h1 class="section-title">Access Denied</h1>
            <div class="page-breadcrumbs">
                <a class="content-link" asp-page="/Index">Home</a>
                <span class="text-theme mx-2"><i class="fas fa-chevron-right"></i></span>
                <span>Access Denied</span>
            </div>
        </div>
    </div>
</section>
<section class="section-long">
    <div class="container">
        <div class="status-entity">
            <div class="entity-icon"><i class="fas fa-cogs opacity-20"></i></div>
            <h4 class="entity-title">Từ chối truy cập</h4>
            <p class="entity-text">Bạn không có đủ quyền để truy cập trang này!</p>
            <div class="entity-actions">
                <a class="btn btn-theme" asp-page="/Index">Back To Homepage</a>
            </div>
        </div>
    </div>
</section>
