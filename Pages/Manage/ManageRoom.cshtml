@page
@model Mini_Theatre.Pages.Manage.ManageRoomModel
@{
    Layout = "_ManageLayout";
    ViewData["Title"] = "Manage Room";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-page="/Rooms/Create" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Create New</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Row</th>
                            <th>Col</th>
                            <th>ScreenType</th>
                            <th>Cinema</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Row</th>
                            <th>Col</th>
                            <th>ScreenType</th>
                            <th>Cinema</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var r in Model.Rooms)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.Name</td>
                                <td>@r.Row</td>
                                <td>@r.Col</td>
                                <td>@r.ScreenType</td>
                                <td>@r.Cinema.Name</td>
                                <th>
                                    <a asp-page="/Rooms/Edit" asp-route-id="@r.Id" class="btn btn-info btn-circle btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (r.DeleteTime != null)
                                    {
                                        <a class="btn btn-secondary btn-circle btn-sm" disabled>
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-page="/Manage/ManageRoom" asp-page-handler="Delete" asp-route-id="@r.Id" class="btn btn-danger btn-circle btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
