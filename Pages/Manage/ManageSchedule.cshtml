@page
@model Mini_Theatre.Pages.Manage.ScheduleModel
@{
    Layout = "_ManageLayout";
    ViewData["Title"] = "Manage Schedule";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-page="/Schedules/Create" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Create New</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Movie</th>
                            <th>Room</th>
                            <th>Cinema</th>
                            <th>ShowDate</th>
                            <th>StartTime</th>
                            <th>EndTime</th>
                            <th>Bookings</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var s in Model.Schedules)
                        {
                            <tr>
                                <td>@s.Id</td>
                                <td>@s.Movie.Title</td>
                                <td>@s.Room.Name</td>
                                <td>@s.Room.Cinema.Name</td>
                                <td>@s.ShowDate.ToString("dd/MM/yyyy")</td>
                                <td>@s.ShowTime.ToString("HH:mm")</td>
                                <td>@s.EndTime.ToString("HH:mm")</td>
                                <td>@s.Bookings.Count()</td>
                                <th>
                                    <a asp-page="/Schedules/Edit" asp-route-id="@s.Id" class="btn btn-info btn-circle btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (s.DeleteTime != null)
                                    {
                                        <a class="btn btn-secondary btn-circle btn-sm" disabled>
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-page="/Manage/ManageSchedule" asp-page-handler="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-circle btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
